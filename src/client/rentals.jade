script(section="body").
	constructor(p,c){
		super(p,c);
		this.componentWillReceiveProps(p);
	}
	async componentWillReceiveProps(p){
		this.search = query.parse(p.query);
		this.sales = await client.getRentals(this.search);
		this.forceUpdate();
	}
	
	update(){
		this.props.location.replace("",query.serialize(this.search));
	}
